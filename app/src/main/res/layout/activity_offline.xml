<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Offline">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="15dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="Backup offline database"
                android:textAlignment="center"
                android:textColor="#323232"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/input_offline_backupPass"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="Enter password to encrypt decrypt backup"
                android:inputType="text"
                android:textSize="16sp"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_offline_backup"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_design_3"
                    android:text="Backup database"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#0F0F0F"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_offline_selectFile"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_design_3"
                    android:text="Load database"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#0F0F0F"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/view_offline_mydisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <TextView
                android:id="@+id/view_offline_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text=""
                android:textColor="#191919"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/view_offline_output_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#B0292929"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>